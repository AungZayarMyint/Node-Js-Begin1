<%- include("./includes/head") %>
<section class="details">
  <div>
    <h1><%= post.title %></h1>
    <a href="/">Go Back Home</a>
  </div>
  <p class="tmp">Post by => <%= post.userId.email %></p>
  <% if(date) { %>
  <p class="tmp">Upload at => <%= date %></p>
  <% } %>
  <a href="/save/<%= post._id %>">Save a copy to your device.</a>
  <img src="<%= '/' + post.imgUrl %>" alt="<%= post.title %>" />
  <hr />
  <p class="des"><%= post.description %></p>
  <% if(post.userId._id.toString() === currentLoginUserId.toString()) { %>
  <div class="login-div">
    <form action="/admin/delete/<%= post._id%>" method="post">
      <input hidden value="<%= csrfToken %>" name="_csrf" />
      <button>Delete</button>
    </form>
    <a href="/admin/edit/<%= post._id%>">Edit</a>
  </div>
  <% } %>
</section>
<%- include("./includes/foot") %>
