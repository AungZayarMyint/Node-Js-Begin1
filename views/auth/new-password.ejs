<%- include("../includes/head") %>
<section class="mx-auto">
  <a href="/">Go Back Home</a>
  <h1 class="title">Change new password!!</h1>
  <% if(errorMsg.length) { %>
  <p class="msg-box"><%= errorMsg %></p>
  <% } %>
  <form action="/change-new-password" method="POST">
    <input hidden value="<%= csrfToken %>" name="_csrf" />
    <input hidden value="<%= resetToken %>" name="resetToken" />
    <input hidden value="<%= user_id %>" name="user_id" />
    <div>
      <label for="password">Enter New Password Bby</label>
      <input
        type="password"
        id="password"
        name="password"
        value="<%= oldFormData.password %>"
      />
    </div>
    <div>
      <label for="confirm_password">Confirm New Password Pr Nw</label>
      <input
        type="password"
        id="confirm_password"
        name="confirm_password"
        value="<%= oldFormData.confirm_password %>"
      />
    </div>
    <button type="submit">Change Password</button>
  </form>
</section>
<%- include("../includes/foot") %>
