<%- include("../includes/head") %>
<section class="mx-auto">
  <h1 class="title">Register a new account here!!</h1>
  <% if(errorMsg.length) { %>
  <p class="msg-box"><%= errorMsg %></p>
  <% } %>
  <form action="/register" method="POST">
    <input hidden value="<%= csrfToken %>" name="_csrf" />
    <div>
      <label for="email">Enter Email</label>
      <input
        type="text"
        id="email"
        name="email"
        value="<%= oldFormData.email %>"
      />
    </div>
    <div>
      <label for="password">Enter Password</label>
      <input
        type="password"
        id="password"
        name="password"
        value="<%= oldFormData.password %>"
      />
    </div>
    <button type="submit">Let's Register Bby!</button>
  </form>
</section>
<%- include("../includes/foot") %>
